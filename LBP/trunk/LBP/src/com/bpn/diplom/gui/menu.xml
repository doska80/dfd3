				  text="Розгорнути всі"	
				  enabled="true"	
				  class="com.bpn.diplom.gui.listeners.MenuWindowMaximizedAll" 
		/>
		<menuitem name="closeMinimize" 		
				  text="Закрити усі згорнуті"	
				  enabled="true"	
				  class="com.bpn.diplom.gui.listeners.MenuWindowCloseMinimize" 
		/>
		<menuitem name="closeMaximize" 		
				  text="Закрити усі розгорнуті"	
				  enabled="true"	
				  class="com.bpn.diplom.gui.listeners.MenuWindowCloseMaximized" 
		/>
