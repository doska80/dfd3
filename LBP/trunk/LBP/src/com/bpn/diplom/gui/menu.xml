				  text="Параметры"	
				  accelerator="O" 
				  enabled="false"	
				  class="" 
		/>
		
		<menuitem name="separator"/>
		
		<menuitem name="video" 		
				  text="Відео"	
				  accelerator="v" 
				  enabled="true"	
				  class="com.bpn.diplom.gui.listeners.MenuFileVideoListener" 
		/>
		
		<menuitem name="photo" 		
				  text="Фото"	
				  accelerator="F" 
				  enabled="true"	
				  class="com.bpn.diplom.gui.listeners.MenuFilePhotoListener" 
		/>
		
